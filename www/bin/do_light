#!/bin/sh

. $WWWBIN/light_function.sh

LIGHT_NUM=`light_num`

light_help() #
{
	echo "light commands"
	echo "--------------"
	echo "light <set|state|list|config> [id] [state]"
	echo "    id    : 0~$LIGHT_NUM"
	echo "    state : 0-on, 1-off"
	echo
}

light_message() #str
{
	echo "light:$1"
}

light_set() #id, state
{
	local id=$1
	local state=$2

	if [ $# -ne 2 ]; then
		light_help
		return
	fi

	if [ $id -lt 0 -o $id -gt `light_max_id` ]; then
		light_help
		return
	fi
	
	if [ $state != "0" -a $state != "1" ]; then
		light_help
		return
	fi

	light_set_one $id $state
	light_state
}

light_state() #
{
	local state=""

	for id in `seq 0 $LIGHT_NUM`
	do
		state=$state`light_get_one $id`
	done
	light_message "state=$state"
}

light_list() #
{
	local state=""

	for id in `seq 0 $LIGHT_NUM`
	do
		state=`light_get_one $id`
		if [ x$state = "x0" ]; then
			state=on
		elif [ x$state = "x1" ]; then
			state=off
		else
			state=unknown
		fi
		echo "light $id status $state"
	done
}

light_config() #
{
	light_message "config=$LIGHT_NUM"
}

do_light() #
{
	local cmd=$1

	case $cmd in
		set|s)
			shift
			light_set "$@"
			;;
		state|s)
			light_state
			;;
		list|l)
			light_list
			;;
		config|c)
			light_config
			;;
		help|h|*)
			light_help
			;;
	esac
}

do_light "$@"
